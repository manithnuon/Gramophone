<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
                Theme customizations available in newer API levels can go in
                res/values-vXX/styles.xml, while customizations related to
                backward-compatibility can go here.
            -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top
        </item>
        <item name="android:actionModeCloseDrawable">
            @drawable/ic_action_accept
        </item>
        <item name="android:actionModeCloseButtonStyle">
            @style/ActionButton.CloseMode.
        </item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/clouds</item>
    </style>
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/belize_hole</item>
        <item name="android:titleTextStyle">
            @style/AppTheme.ActionBar.TitleTextStyle
        </item>
    </style>

    <style name="ActionButton.CloseMode." parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_default</item>
    </style>

    <style name="NowPlayingActivityTheme" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
