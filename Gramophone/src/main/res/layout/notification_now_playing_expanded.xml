<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"                android:orientation="vertical"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:background="@color/turqouise">    <ImageView            android:id="@+id/albumArt_ImageView"            android:layout_width="128dp"            android:layout_height="128dp"            android:src="@drawable/ic_launcher"/>    <TextView            android:id="@+id/title_TextView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="8dp"            android:text="Title"            android:layout_toRightOf="@id/albumArt_ImageView"            android:textSize="18sp"            android:ellipsize="end"            android:singleLine="true"            android:minWidth="256dp"            android:textColor="?android:attr/textColorPrimary"/>    <TextView            android:id="@+id/artistAlbum_TextView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_toRightOf="@id/albumArt_ImageView"            android:layout_below="@id/title_TextView"            android:text="Artist - Album"            android:textSize="14sp"            android:textColor="?android:attr/textColorSecondary"            android:ellipsize="end"            android:minWidth="256dp"            android:singleLine="true"/>    <TextView            android:id="@+id/upNext_TextView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_toRightOf="@id/albumArt_ImageView"            android:layout_below="@id/artistAlbum_TextView"            android:text="Up Next: "            android:textSize="14sp"            android:textColor="?android:attr/textColorSecondary"            android:ellipsize="end"            android:minWidth="256dp"            android:singleLine="true"/>    <ImageButton            android:id="@+id/closeNotification_imageButton"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:src="@android:drawable/ic_menu_close_clear_cancel"            android:layout_gravity="center"            android:layout_alignParentRight="true"            android:maxWidth="40dp"            android:maxHeight="40dp"            style="?android:attr/borderlessButtonStyle"/>    <!--TODO: use my own drawable for close-->    <View            android:id="@+id/divider"            android:background="@color/notification_divider_gray"            android:layout_width="wrap_content"            android:layout_height="1dp"            android:layout_toRightOf="@id/albumArt_ImageView"            android:layout_below="@id/upNext_TextView"            android:layout_marginTop="8dp"/>    <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:layout_below="@id/divider"            android:layout_alignParentRight="true"            android:layout_alignParentBottom="true"            android:layout_toRightOf="@id/albumArt_ImageView">        <ImageButton                android:id="@+id/prevSong_ImageButton"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:src="@drawable/ic_action_previous"                style="?android:attr/borderlessButtonStyle"/>        <ImageButton                android:id="@+id/togglePlayback_imageButton"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:src="@drawable/ic_action_pause"                style="?android:attr/borderlessButtonStyle"/>        <ImageButton                android:id="@+id/nextSong_imageButton"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:src="@drawable/ic_action_next"                style="?android:attr/borderlessButtonStyle"/>    </LinearLayout></RelativeLayout>