<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:orientation="horizontal"              android:layout_width="match_parent"              android:layout_height="match_parent">    <ImageView            android:id="@+id/albumArt_ImageView"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:src="@drawable/ic_launcher"/>    <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:paddingLeft="8dp"            android:paddingRight="4dp"            android:orientation="vertical"            android:layout_gravity="center"            android:layout_weight="1">        <TextView                android:id="@+id/title_TextView"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Title"                android:textSize="18sp"                android:ellipsize="end"                android:singleLine="true"                android:textColor="@color/white"/>        <TextView                android:id="@+id/artist_TextView"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Artist"                android:textSize="14sp"                android:textColor="@color/darker_gray"                android:ellipsize="end"                android:singleLine="true"/>    </LinearLayout>    <ImageView            android:id="@+id/togglePlayback_imageView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:src="@drawable/ic_action_play_holo_dark"            android:layout_gravity="center"            android:clickable="true"            android:padding="8dp"/>    <ImageView            android:id="@+id/nextSong_imageView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:src="@drawable/ic_action_next"            android:layout_gravity="center"            android:padding="8dp"/>    <ImageView            android:id="@+id/closeNotification_imageView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:src="@android:drawable/ic_menu_close_clear_cancel"            android:layout_gravity="center"            android:padding="8dp"/></LinearLayout>